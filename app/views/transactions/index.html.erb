<%= flash[:notice] %>
<table>
  <thead>
    <tr>
      <th>Paid by</th>
      <th>Bank Acc Id</th>
      <th>Date</th>
      <th>Transaction Id</th>
      <th>Transaction Type</th>
      <th>Cheque Number</th>
      <th>Payee</th>
      <th>Memo</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <%= form_for :transaction, :url => update_multiple_transactions_path, :method => "put" do |f| %>
      <% @transactions.each do |tr| %>
        <% tenant = tr.tenant %>
        <%= fields_for "transactions[]", tr do |tf| %>
          <tr>
            <%= tf.hidden_field(:is_updated, :value => 'false') %>
            <td>
              <%= tf.collection_select(:tenant_id, Tenant.all, :id, :name, { include_blank: true}, :onChange=>"javascript: document.getElementById('transactions_" + tr.id.to_s + "_is_updated').value='true'")  %>
            </td>
            <td><%= tr.bank_account_id %></td>
            <td><%= tr.date %></td>
            <td><%= tr.transaction_id %></td>
            <td><%= tr.transaction_type %></td>
            <td><%= tr.cheque_num %></td>
            <td><%= tr.payee %></td>
            <td><%= tr.memo %></td>
            <td><%= number_to_currency(tr.amount, :unit => "$") %></td>
          </tr>
        <% end %>
      <% end %>
      <tr>
        <td colspan="9">
          <%= submit_tag("Update Transactions") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<h3>Import a CSV File</h3>
  <%= form_tag import_transactions_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>