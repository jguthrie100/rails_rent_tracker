<h3 class="text-primary">List of Houses</h3>
<table class="table table-hover table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    <% @houses.each do |h| %>
      <tr>
        <td><%= link_to(h.name, house_path(h)) %></td>
        <td><%= h.address %> - <%= link_to("[map]", "http://www.google.com/maps/search/#{h.address}", :target => "_blank") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to "Add/Edit Houses", edit_houses_path %>
</p>